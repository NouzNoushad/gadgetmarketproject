<div class="row mt-5">
    <div class="col-md-5 m-auto">
        <div class="card card-body">

            <form action="/products/login" method="POST">

                <div class="mb-3 row justify-content-center mt-5">
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                </div>
                <div class="mb-3 row justify-content-center">
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                </div>

                <div class="d-md-flex justify-content-md-center">
                    <button type="submit" class="btn btn-primary col-sm-8 mt-2 mb-2">Login</button>
                </div>

                <div class="d-md-flex justify-content-md-center">
                    <p class="lead">Don't Have an Account?<a href="/products/register" class="mt-2 mb-5 ps-2">Sign In</a></p>
                </div>
                
            </form>
        </div>
    </div>
</div>