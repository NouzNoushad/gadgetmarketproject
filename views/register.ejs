<div class="row mt-5">
<div class="col-md-6 m-auto">
    <div class="card card-body">
        <form action="/products/register" method="POST">

            <% if(typeof errors != undefined){ %>
                <% errors.map(error => { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error.message %> 
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% }); %> 
            <% } %> 
            <div class="mb-3 row justify-content-center mt-5">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name">
                    </div>
            </div>
            <div class="mb-3 row justify-content-center">
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                    </div>
            </div>
            <div class="mb-3 row justify-content-center">
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
            </div>
            <div class="mb-3 row justify-content-center">
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="ConfirmPassword">
                    </div>
            </div>
            <div class="d-md-flex justify-content-md-center">
                <button type="submit" class="btn btn-primary col-md-10 mt-2 mb-2">Sign In</button>
            </div>
            <div class="d-md-flex justify-content-md-center">
                <p class="lead">Have an Account?<a href="/products/login" class="mb-5 ps-2">Login</a></p>
            </div>
            
        </form>
    </div>
</div>
</div>
