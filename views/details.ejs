<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card-body">
            <%- include('./partials/errors.ejs') %> 
                    <div class="col ">
                        <div class="card h-100">
                            <h2 class="text-center mt-4"><%= product.name %> </h2>
                            <img src="/uploads/<%= product.image %> " alt="<%= product.name %> ">
                            <div class="card-body">
                                <h5 class="card-title">Name: <%= product.name %></h5>
                                <h6>Product: <%= product.category %> </h6>
                                <h6>Brand: <%= product.company %> </h6>
                                <h6>price: <%= product.price %> </h6>
                                <h6>Rating: <%= averageRatings %>
                                <span>(<%= customers %>)</span>
                                </h6>
                                <h6 class="card-text">description: <%= product.description %> </h6>
                                <a href="/products/passwordEdit/<%= product.id %> " class="btn btn-info form-control mt-2">Edit <%= product.name %> </a>
                                <a href="/products/rating/<%= product.id %> " class="btn btn-primary form-control mt-2">Write a review</a>
                    
                            </div>
                        </div>
                    </div>

                <!-- message section -->

                <h6 class="mt-3">Read Reviews:</h6>
                <div class="row mt-2">
                    <div class="m-auto">
                        <% usersReviews.map((reviews) => { %>
                            <% if(reviews.product == product.id){ %>
                                <div class="card card-body mt-2">
                                    <h6><%= reviews.username %> </h6>
                                    <h8><%= reviews.date.toLocaleString() %> </h8>
                                    <h6>Rating: <%= reviews.rating %> </h6>
                                    <h6><%= reviews.review %> </h6>
                                    <p class="mt-3"><%= reviews.message %> </p>
                                </div>
                            <% } %> 
                        <% }) %> 
                    </div>
                </div>
        </div>
    </div>
</div>