<div class="row mt-5">
    <div class="col-md-4 m-auto">
        <div class="card card-body">

            <form action="/products/recover" method="POST">

                <% if(typeof errors != undefined){ %>
                    <% errors.map(error => { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error.message %> 
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% }); %> 
                <% } %>
                <div class=" mt-4 mb-2 row justify-content-center">
                        <div class="col-sm-8">
                            <small class="mb-0">web owner email*</small>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                </div>
                <div class=" mt-2 mb-4 row justify-content-center">
                        <div class="col-sm-8">
                            <small class="mb-0">create new password*</small>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        </div>
                </div>

                <div class="d-md-flex justify-content-md-center">
                    <button type="submit" class="btn btn-primary col-sm-8 mb-5">Create New</button>
                </div>
                
            </form>
        </div>
    </div>
</div>